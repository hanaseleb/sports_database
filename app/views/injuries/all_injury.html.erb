<%= render '/partial/navlist' %>
<h1>怪我全記録</h1>
<%= link_to 'Back', admin_path, class: 'btn btn-default' %>
<table class="table table-hover table-responsive table-striped">
  <thead class="thead-default">
  <tr>
    <th>User</th>
    <th>Part</th>
    <th>備考</th>
    <th>完治</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @injuries.reverse_order.each do |injury| %>
      <tr>
        <td><%= injury.user_id %></td>
        <td><%= injury.created_at %></td>
        <td><%= injury.part %></td>
        <td><%= injury.heal %></td>
        <td><%= link_to 'Show', injury %></td>
        <td><%= link_to 'Edit', edit_injury_path(injury) %></td>
        <td><%= link_to 'Destroy', injury, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Injury', new_injury_path %>
