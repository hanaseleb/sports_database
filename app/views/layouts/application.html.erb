<!DOCTYPE html>
<html>
  <head>
    <title>Rugby_Database</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://www.gstatic.com/charts/loader.js' %>
  </head>
  <body class="wf-roundedmplus1c">
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Rugby_Database</a>
        <% if user_signed_in? %>
            <%= link_to "TOP", root_path, method: :get, :class => "btn btn-default navbar-btn" %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => "btn btn-default navbar-btn" %>
        <% end %>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
    </div><!-- /.container-fluid -->
  </nav>

<div class="container" style="padding:60px 0 0 0">
  <%= render 'partial/toastrnotifi' %>
  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <div class="row">
          <div class="col-xs-12">
            <div class="jumbotron">
              <div class="container">
                <h1>Rugby Database</h1>
                <p>Challenge</p>
              </div>
            </div>
          </div>
        </div>
        <%= yield %>
      </div>
    </div>
  </div>
</div>
  </body>
</html>
