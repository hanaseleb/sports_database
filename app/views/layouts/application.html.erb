<!DOCTYPE html>
<html>
<head>
  <title>Rugby_Database</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'https://www.gstatic.com/charts/loader.js' %>
</head>
<body class="wf-roundedmplus1c">
<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Sports Database", root_path, class: "navbar-brand" %>
    </div>
    <% if user_signed_in? %>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav text-right">
            <li><%= link_to "TOP", root_path, method: :get %></li>
            <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
          </ul>
    <% end %>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
  </div><!-- /.container-fluid -->
</nav>
<div class="jumbotron">
  <div class="container-fluid" style="padding:60px 0 0 0">
    <%= render 'partial/toastrnotifi' %>
    <h1>Rugby Database</h1>
    <p>Challenge</p>
  </div>
</div>
<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <%= yield %>
  </div>
</div>
</body>
</html>
